<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="org.hsqldb.jdbcDriver"/>
        <property name="url" value="jdbc:hsqldb:mem:unitils"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>
    </bean>

    <bean class="org.unitils.database.UnitilsDataSourceBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="schemaName" value="public"/>
        <property name="dialect" value="hsqldb"/>
        <property name="defaultDatabase" value="true"/>
    </bean>

    <bean id="test" class="org.unitils.database.UnitilsDataSourceBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="schemaName" value="public"/>
        <property name="dialect" value="hsqldb"/>
    </bean>

</beans>